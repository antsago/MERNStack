{
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev:page dev:server",
    "build": "npm run clean && npm-run-all --parallel build:page build:server",
    "start": "node dist/server/server.js",
    "dev:page": "webpack --config webpack.page.config.js --mode development --watch",
    "dev:server": "ts-node-dev src/server/server.tsx",
    "clean": "rm -rf ./dist",
    "build:server": "webpack --config webpack.server.config.js --mode production",
    "build:page": "rm -rf ./dist && webpack --config webpack.page.config.js --mode production"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-env": "^1.15.2",
    "babel-loader": "^8.1.0",
    "html-webpack-plugin": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^7.0.5",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": [
    "defaults"
  ]
}
